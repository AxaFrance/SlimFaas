<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>SlimFaas</RootNamespace>
        <WarningsAsErrors>Nullable</WarningsAsErrors>
      <PublishTrimmed>true</PublishTrimmed>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="KubernetesClient" Version="12.1.1" />
      <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="8.0.0" />
      <PackageReference Include="OpenTelemetry" Version="1.5.0-alpha.2" />
      <PackageReference Include="OpenTelemetry.Api" Version="1.5.0-alpha.2" />
      <PackageReference Include="OpenTelemetry.Exporter.Console" Version="1.5.0-alpha.2" />
      <PackageReference Include="OpenTelemetry.Exporter.Jaeger" Version="1.5.0-alpha.2" />
      <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.5.0-alpha.2" />
      <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.0.0-rc9.14" />
      <PackageReference Include="OpenTelemetry.Instrumentation.Http" Version="1.0.0-rc9.14" />
      <PackageReference Include="prometheus-net" Version="8.1.0" />
      <PackageReference Include="prometheus-net.AspNetCore" Version="8.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\SlimData\SlimData.csproj" />
    </ItemGroup>

</Project>
